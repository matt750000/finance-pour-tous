{% extends "base.html.twig" %}

{% block title %} Produits
{% endblock %}

{% block body  %}
 <section class="mt-5" text-dark bg-light">
    <h2>Nos Produits</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-3">
        {% for product in products %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    {% if product.image %}
                        <img src="{{ asset('images/products/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">
                    {% else %}
                        <img src="{{ asset('images/default-product.jpg') }}" class="card-img-top" alt="Image par défaut">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text text-muted">
                            {{ product.description|default('Aucune description')|slice(0, 100) ~ '...' }}
                        </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <span class="fw-bold">{{ product.price }} €</span>
                        <a href="{{ path('app_login') }}" class="btn btn-sm btn-primary">Voir</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col">
                <div class="alert alert-info">Aucun produit trouvé.</div>
            </div>
        {% endfor %}
    </div>

    <div class="navigation d-flex justify-content-center mt-4">
        {{ knp_pagination_render(products) }}
    </div>
 </section>
{% endblock %}
